<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="com.stlouisweb.calendarplugin"
        version="0.1.0">
    <name>Calendar</name>
    <description>Sample PhoneGap Calendar Plugin</description>
    <license>MIT</license>
    <keywords>cordova,calendar</keywords>


    <js-module src="www/calendar.js" name="Calendar">
        <clobbers target="window.calendar" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="Calendar">
                <param name="android-package" value="com.stlouisweb.calendarplugin.Calendar"/>
            </feature>
        </config-file>

        <source-file src="src/android/Calendar.java" target-dir="src/" />
    </platform>
</plugin>